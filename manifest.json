{
    "manifest_version": 3,
    "name": "oii",
    "description": "Adds ii (improvement indicator) metric to user profiles on the osu! website",
    "permissions": [
        "tabs"
    ],
    "version": "0.1",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/oii16.png",
        "32": "images/oii32.png",
        "48": "images/oii48.png",
        "128": "images/oii128.png"
    },
    "browser_specific_settings": {
        "gecko": {
        "id": "{f0cfba57-913e-48f7-b957-d5def31647d3}"
        }
    },

    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://osu.ppy.sh/*"
            ],
            "run_at": "document_idle"
        }
    ]
}